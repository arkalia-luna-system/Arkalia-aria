# ARKALIA ARIA - Configuration d'environnement
# Copiez ce fichier vers .env et remplissez les valeurs

# ===========================================
# CONFIGURATION GÉNÉRALE
# ===========================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ===========================================
# SAMSUNG HEALTH API
# ===========================================
SAMSUNG_HEALTH_ENABLED=true
SAMSUNG_HEALTH_API_KEY=your_samsung_health_api_key_here
SAMSUNG_HEALTH_API_SECRET=your_samsung_health_api_secret_here
SAMSUNG_HEALTH_BASE_URL=https://api.samsunghealth.com
SAMSUNG_HEALTH_TIMEOUT=30

# ===========================================
# GOOGLE FIT API
# ===========================================
GOOGLE_FIT_ENABLED=true
GOOGLE_FIT_CLIENT_ID=your_google_fit_client_id_here
GOOGLE_FIT_CLIENT_SECRET=your_google_fit_client_secret_here
GOOGLE_FIT_REDIRECT_URI=http://localhost:8000/auth/google/callback
GOOGLE_FIT_SCOPES=["https://www.googleapis.com/auth/fitness.activity.read","https://www.googleapis.com/auth/fitness.body.read","https://www.googleapis.com/auth/fitness.sleep.read"]

# ===========================================
# APPLE HEALTHKIT (iOS Health)
# ===========================================
IOS_HEALTH_ENABLED=true
IOS_HEALTH_TEAM_ID=your_apple_team_id_here
IOS_HEALTH_KEY_ID=your_apple_key_id_here
IOS_HEALTH_PRIVATE_KEY=your_apple_private_key_here
IOS_HEALTH_BUNDLE_ID=com.arkalia.aria

# ===========================================
# CONFIGURATION DE SYNCHRONISATION
# ===========================================
SYNC_INTERVAL_HOURS=6
MAX_DAYS_BACK=30
AUTO_SYNC_ENABLED=true
BATCH_SIZE=100

# ===========================================
# SÉCURITÉ
# ===========================================
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION_HOURS=24

# ===========================================
# BASE DE DONNÉES
# ===========================================
DATABASE_URL=postgresql://arkalia_user:arkalia_password@localhost:5432/arkalia_db
REDIS_URL=redis://localhost:6379

# ===========================================
# CONFIGURATION DES LOGS
# ===========================================
LOG_FILE=logs/health_connectors.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# ===========================================
# NOTIFICATIONS
# ===========================================
NOTIFICATION_ENABLED=true
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# ===========================================
# WEBHOOKS
# ===========================================
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://your-webhook-url.com/health-data
WEBHOOK_SECRET=your_webhook_secret_here

# ===========================================
# CONFIGURATION MOBILE
# ===========================================
MOBILE_API_BASE_URL=https://api.arkalia-aria.com
MOBILE_API_TIMEOUT=30
MOBILE_CACHE_SIZE=1000
MOBILE_SYNC_INTERVAL=300

# ===========================================
# CONFIGURATION DASHBOARD
# ===========================================
DASHBOARD_THEME=light
DASHBOARD_REFRESH_INTERVAL=30
DASHBOARD_CHART_POINTS=100
DASHBOARD_EXPORT_FORMATS=["pdf","excel","html"]

# ===========================================
# CONFIGURATION DE DÉVELOPPEMENT
# ===========================================
# Utilisez ces valeurs pour le développement local
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/arkalia_dev
# REDIS_URL=redis://localhost:6379
# DEBUG=true
# LOG_LEVEL=DEBUG

